{
  "name": "lumadoc-electron",
  "productName": "lumadoc",
  "version": "1.0.0-dev",
  "description": "lumadoc Electron wrapper",
  "main": "index.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "debug": "electron --inspect=5858 . -- --debug --verbose",
    "debug-lr": "electronmon --inspect=5858 . -- --debug --verbose --livereload",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win-store": "electron-builder --win appx",
    "postinstall": "electron-builder install-app-deps"
  },
  "engines": {
    "node": "22.21.1",
    "npm": "*"
  },
  "electronmon": {
    "patterns": [
      "!../client/**",
      "!../tokens.json"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "electronmon": "^2.0.4"
  }
}
